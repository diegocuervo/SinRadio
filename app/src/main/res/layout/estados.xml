<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.diegocuervo.sinradio.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="370dp"
        android:background="@color/yellow">

        <TextView
            android:layout_width="262dp"
            android:layout_height="82dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Nombre del Chofer"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal|top"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="227dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Nro de Movil"
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textSize="25sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp" />
    </FrameLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Libre"
        android:id="@+id/button"
        android:layout_marginTop="110dp"
        android:textSize="25sp"
        android:onClick="btn_libre"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Ocupado"
        android:id="@+id/button2"
        android:textSize="25sp"
        android:onClick="btn_ocupado"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Llegando a cliente"
        android:id="@+id/button3"
        android:textSize="25sp"
        android:onClick="btn_llegando"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Esperando a Cliente"
        android:id="@+id/button4"
        android:textSize="25sp"
        android:onClick="btn_esperando"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Inhabilitado"
        android:id="@+id/button5"
        android:textSize="25sp"
        android:onClick="btn_inhabilitado"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_marginTop="15dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/taxi"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="-25dp"
        android:layout_marginBottom="-35dp" />


</RelativeLayout>
