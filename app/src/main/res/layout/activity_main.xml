<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.diegocuervo.sinradio.MainActivity">

    <android.support.percent.PercentFrameLayout
        app:layout_heightPercent="22%"
        app:layout_widthPercent="100%"
        android:layout_width="0dp"
        android:layout_height="0dp"


        android:background="@color/yellow"
        android:id="@+id/frameLayout">

        <TextView


            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_marginTopPercent="15%"
            android:text="Nombre del Chofer"
            android:id="@+id/textView"
            app:layout_marginLeftPercent="20%"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textSize="25sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:layout_marginLeftPercent="20%"
            app:layout_marginTopPercent="50%"
            android:text="Estado: Libre"
            android:id="@+id/textView2"

            android:textColor="@color/abc_input_method_navigation_guard"
            android:textSize="25sp"
           />
    </android.support.percent.PercentFrameLayout>

    <Button
        app:layout_heightPercent="10%"

        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:text="Estado"
        android:id="@+id/button"

        app:layout_marginTopPercent="30%"
        android:textSize="25sp"
        android:onClick="btn_estado" />

    <Button
        app:layout_heightPercent="10%"

        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:text="Viajes"
        android:id="@+id/button2"
        android:textSize="25sp"
        app:layout_marginTopPercent="45%"

        android:onClick="btn_viaje" />

    <Button
        app:layout_heightPercent="10%"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Emergencia"
        android:id="@+id/button3"
        app:layout_marginTopPercent="60%"

        android:textSize="25sp"
        android:onClick="btn_emergencia" />

    <Button
        app:layout_heightPercent="10%"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Salir"
        android:id="@+id/button4"
        app:layout_marginTopPercent="75%"

        android:textSize="25sp"
        android:onClick="btn_salir" />


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/taxi"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/frameLayout"
        android:layout_alignEnd="@+id/frameLayout"
        android:layout_marginBottom="-35dp"
        android:layout_marginRight="-25dp" />

</android.support.percent.PercentRelativeLayout>
