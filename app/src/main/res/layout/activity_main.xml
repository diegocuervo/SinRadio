<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.diegocuervo.sinradio.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="370dp"
        android:background="@color/yellow"
        android:id="@+id/frameLayout">

        <TextView
            android:layout_width="262dp"
            android:layout_height="82dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Nombre del Chofer"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal|top"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="227dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Nro de Movil"
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textSize="25sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp" />
    </FrameLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Estado"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:textSize="25sp"
        android:onClick="btn_estado" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Viajes"
        android:id="@+id/button2"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:onClick="btn_viaje" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Emergencia"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:textSize="25sp"
        android:onClick="btn_emergencia" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:textSize="25sp"
        android:onClick="btn_salir" />


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/taxi"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/frameLayout"
        android:layout_alignEnd="@+id/frameLayout"
        android:layout_marginBottom="-35dp"
        android:layout_marginRight="-25dp" />

</RelativeLayout>
