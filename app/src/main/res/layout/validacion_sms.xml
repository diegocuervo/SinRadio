<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.diegocuervo.sinradio.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="370dp"
        android:background="@color/yellow">

        <TextView
            android:layout_width="262dp"
            android:layout_height="82dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Bienvenido a SinRadio:"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal|top"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textSize="25sp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="ValidaciÃ³n de Usuario"
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textSize="25sp"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="20dp" />
    </FrameLayout>



    <TextView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ingrese el codigo que acaba de recibir por SMS"
        android:id="@+id/textView3"
        android:layout_gravity="center"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/taxi"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="-25dp"
        android:layout_marginBottom="-35dp" />

    <EditText
        android:layout_width="520dp"
        android:layout_height="60dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Validar"
        android:id="@+id/button6"
        android:layout_above="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:onClick="btn_validar" />


</RelativeLayout>
